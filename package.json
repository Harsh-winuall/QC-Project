{
  "name": "react-flask-app",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^5.20.3",
    "concurrently": "^8.2.2",
    "ejs": "^3.1.9",
    "electron-is-dev": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-api": "cd api && venv\\Scripts\\flask run --no-debugger",
    "test": "react-scripts test",
    "test-api": "cd api && flask test",
    "start-both": "concurrently \"npm run start\" \"npm run start-api\" \"npm run electron\"",
    "electron": "electron .",
    "build": "react-scripts build",
    "predist": "copy public\\electron.js build\\electron.js",
    "postdist": "xcopy /E /I /Y api\\ dist\\api",
    "dist": "npm run predist && npm run build && electron-builder && npm run postdist"
  },
  "build": {
    "appId": "com.qcapp.id",
    "productName": "QCProject",
    "files": [
      "build/**/*",
      "public/**/*",
      "api/**/*"   
    ],
    "extraResources": [
      {
        "from": "api/",
        "to": "api/",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/logo512.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/logo512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/logo512.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://127.0.0.1:5000",
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3"
  }
}
